<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="busservice.dao.ICityDAO">
    <resultMap id="CityMap"
               type="City"
               autoMapping="false">
        <id property="id" column="city_id"/>
        <result property="name" column="city_name"/>
    </resultMap>
    <sql id="cityColumns">
        c
        .
        id
        as city_id,
        c.name as city_name
    </sql>

    <select id="getById" parameterType="int" resultMap="CityMap">
        SELECT
        <include refid="cityColumns"/>
        FROM city
        WHERE id =#{id};
    </select>

    <select id="getAll" resultMap="CityMap">
        SELECT
        <include refid="cityColumns"/>
        FROM city
    </select>

    <insert id="insert" parameterType="City">
        INSERT INTO city (name)
        VALUES (#{city.name})
    </insert>

    <update id="update" parameterType="City">
        UPDATE city
        SET name = #{city.name}
        WHERE id = #{city.id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE
        FROM city
        WHERE id = #{id}
    </delete>

</mapper>