<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="busservice.dao.ICityDAO">
    <resultMap id="CityMap" type="City">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="getByIdCity" parameterType="int" resultMap="CityMap">
        SELECT *
        FROM city
        WHERE id =#{id};
    </select>

    <select id="getAllCities" resultMap="CityMap">
        SELECT *
        FROM city
    </select>

    <insert id="insertCity" parameterType="City">
        INSERT INTO city
        (name)
        VALUES (#{name})
    </insert>

    <update id="updateCity" parameterType="map">
        UPDATE city SET
        name = #{object.name}
        WHERE id = #{id}
    </update>

    <delete id="deleteByIdCity" parameterType="int">
        DELETE FROM city
        WHERE id = #{id}
    </delete>

</mapper>